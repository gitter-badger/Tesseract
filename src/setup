
init graphics

add file main
add path /

add module conditionals
add module file
add module lgen.processor

@if compat
  add flag LUA51
@endif

@ifn MINIFY
  @ifn API
    @print builds/graphics.lua
    add output builds/graphics.lua
    build

  @else
    @print builds/graphics_api.lua
    add output builds/graphics_api.lua
    add flag API
    build
  @endif
@endif

@if MINIFY
  add flag MINIFY
  add module processors.minify
  
  @ifn API
    @print builds/graphics_min.lua
    add output builds/graphics_min.lua
    build

  @else
    @print builds/graphics_api_min.lua
    add output builds/graphics_api_min.lua
    add flag API
    build
  @endif
@endif

